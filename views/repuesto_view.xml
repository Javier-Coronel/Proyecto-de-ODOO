<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_taller_repuesto_search" model="ir.ui.view">
        <field name="name">taller.repuesto.search</field>
        <field name="model">taller.repuesto</field>
        <field name="arch" type="xml">
            <search string="Buscar Repuestos">
                <field name="nombre"/>
                <field name="tipo"/>
                
                <filter string="Neumáticos" name="filter_neumaticos" domain="[('tipo', '=', 'neumaticos')]"/>
                <filter string="Costosos (>100)" name="filter_caros" domain="[('coste', '>', 100)]"/>
                
                <group expand="0" string="Agrupar Por">
                    <filter string="Tipo de Componente" name="group_by_tipo" context="{'group_by': 'tipo'}"/>
                    <filter string="Fecha de Compra" name="group_by_fecha" context="{'group_by': 'fecha'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_taller_repuesto_tree" model="ir.ui.view">
        <field name="name">taller.repuesto.tree</field>
        <field name="model">taller.repuesto</field>
        <field name="arch" type="xml">
            <tree string="Repuestos" sample="1"> <field name="nombre"/>
                <field name="tipo" decoration-info="tipo == 'neumaticos'" widget="badge"/>
                <field name="fecha"/>
                <field name="coste" sum="Total" widget="monetary"/>
            </tree>
        </field>
    </record>

    <record id="view_taller_repuesto_form" model="ir.ui.view">
        <field name="name">taller.repuesto.form</field>
        <field name="model">taller.repuesto</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="nombre" class="oe_edit_only"/>
                        <h1><field name="nombre"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="tipo" widget="radio"/>
                            <field name="fecha"/>
                        </group>
                        <group>
                            <field name="coste" widget="monetary"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_taller_repuesto_kanban" model="ir.ui.view">
        <field name="name">taller.repuesto.kanban</field>
        <field name="model">taller.repuesto</field>
        <field name="arch" type="xml">
            <kanban default_group_by="tipo" sample="1">
                <field name="nombre"/>
                <field name="coste"/>
                <field name="tipo"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click oe_kanban_card">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="nombre"/>
                                    </strong>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <span class="badge rounded-pill text-bg-info"><field name="tipo"/></span>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_right">
                                    <strong><field name="coste" widget="monetary"/></strong>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_taller_repuesto_calendar" model="ir.ui.view">
        <field name="name">taller.repuesto.calendar</field>
        <field name="model">taller.repuesto</field>
        <field name="arch" type="xml">
            <calendar string="Calendario de Compras" date_start="fecha" color="tipo" mode="month">
                <field name="nombre"/>
                <field name="coste"/>
            </calendar>
        </field>
    </record>

    <record id="view_taller_repuesto_graph" model="ir.ui.view">
        <field name="name">taller.repuesto.graph</field>
        <field name="model">taller.repuesto</field>
        <field name="arch" type="xml">
            <graph string="Costes por Tipo" type="bar">
                <field name="tipo"/>   <field name="coste" type="measure"/> </graph>
        </field>
    </record>

    <record id="action_taller_repuesto" model="ir.actions.act_window">
        <field name="name">Repuestos</field>
        <field name="res_model">taller.repuesto</field>
        <field name="view_mode">tree,kanban,form,calendar,graph</field> 
        <field name="search_view_id" ref="view_taller_repuesto_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                ¡Registra tu primer repuesto!
            </p>
        </field>
    </record>
</odoo>