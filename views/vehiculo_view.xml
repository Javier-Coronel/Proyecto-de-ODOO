<odoo>
    <data>
        <record id="view_taller_vehiculo_tree" model="ir.ui.view">
            <field name="name">taller.vehiculo.tree</field>
            <field name="model">taller.vehiculo</field>
            <field name="arch" type="xml">
                <tree string="Vehículos">
                    <field name="matricula"/>
                    <field name="vehicle_type"/>
                    <field name="cliente_id"/>
                    <field name="num_reparaciones"/>
                </tree>
            </field>
        </record>

        <record id="view_taller_vehiculo_form" model="ir.ui.view">
            <field name="name">taller.vehiculo.form</field>
            <field name="model">taller.vehiculo</field>
            <field name="arch" type="xml">
                <form string="Vehículo">
                    <sheet>
                        <group>
                            <group>
                                <field name="matricula"/>
                                <field name="numbastidor"/>
                                <field name="vehicle_type"/>
                            </group>
                            <group>
                                <field name="fecha_compra"/>
                                <field name="cliente_id"/>
                                <field name="num_reparaciones"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Historial Reparaciones">
                                <field name="reparaciones_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_taller_vehiculo_search" model="ir.ui.view">
            <field name="name">taller.vehiculo.search</field>
            <field name="model">taller.vehiculo</field>
            <field name="arch" type="xml">
                <search>
                    <field name="matricula"/>
                    <field name="cliente_id"/>
                    <filter string="Coches" name="filtro_coche" domain="[('vehicle_type', '=', 'car')]"/>
                    <filter string="Motos" name="filtro_moto" domain="[('vehicle_type', '=', 'motorcycle')]"/>
                </search>
            </field>
        </record>

        <record id="action_taller_vehiculo" model="ir.actions.act_window">
            <field name="name">Vehículos</field>
            <field name="res_model">taller.vehiculo</field>
            <field name="view_mode">tree,form,search</field>
        </record>
    </data>
</odoo>